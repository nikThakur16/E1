{
  "name": "my-extension",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:web": "vite --mode web",
    "dev:extension": "vite --mode extension",
    "dev:global": "vite --mode global",
    
    "build": "npm run build:web && npm run build:extension && npm run build:global",
    "build:web": "tsc -b && vite build --mode web",
    "build:extension": "tsc -b && vite build --mode extension",
    "build:global": "tsc -b && vite build --mode global",
    
    "preview:web": "vite preview --mode web",
    "preview:extension": "vite preview --mode extension",
    "preview:global": "vite preview --mode global",
    "preview": "vite preview",
    
    "deploy:web": "npm run build:web && npm run deploy:vercel",
    "deploy:vercel": "vercel --prod --cwd dist-web",
    "deploy:netlify": "npm run build:web && netlify deploy --prod --dir=dist-web",
    
    "package:extension": "npm run build:extension && cd dist-extension && zip -r ../summarizex-extension.zip .",
    
    "lint": "eslint .",
    "clean": "rm -rf dist-web dist-extension dist"
  },
  "dependencies": {
    "@react-oauth/google": "^0.12.2",
    "@reduxjs/toolkit": "^2.9.0",
    "@tailwindcss/vite": "^4.1.12",
    "axios": "^1.11.0",
    "formik": "^2.4.6",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.542.0",
    "music-metadata": "^11.9.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hot-toast": "^2.6.0",
    "react-redux": "^9.2.0",
    "react-router": "^7.8.2",
    "react-router-dom": "^7.8.2",
    "tailwindcss": "^4.1.12",
    "wavesurfer.js": "^7.10.1",
    "yup": "^1.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/chrome": "^0.1.4",
    "@types/node": "^20.19.13",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/wavesurfer.js": "^6.0.12",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-static-copy": "^3.1.2"
  }
}
